<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp"
    tools:context=".AlbumsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnReturnCatalogue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnReviewAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews" />
        </LinearLayout>


        <!-- Album Cover -->
        <ImageView
            android:id="@+id/albumCover"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            android:background="@android:color/darker_gray" />

        <!-- Album Title -->
        <TextView
            android:id="@+id/albumTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Album Title"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Artist Button -->
        <Button
            android:id="@+id/albumArtistBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textSize="16sp"
            android:textColor="#555555"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Release Date -->
        <TextView
            android:id="@+id/releaseDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Released: "
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginBottom="4dp" />

        <!-- Duration -->
        <TextView
            android:id="@+id/durationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: "
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginBottom="12dp" />

        <!-- Songs -->
        <TextView
            android:id="@+id/albumSongListLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Songs:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:id="@+id/songListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- Ratings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Rating:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/avgRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0 stars"
            android:textSize="15sp"
            android:layout_marginBottom="10dp" />

        <!-- User Review -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Rating:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <RatingBar
            android:id="@+id/albumRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:layout_marginBottom="8dp"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:progressTint="@android:color/holo_orange_light"
            android:secondaryProgressTint="@android:color/holo_orange_light"
            android:indeterminateTint="@android:color/holo_orange_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Review:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/userReviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading your review..."
            android:textColor="#333333"
            android:padding="8dp"
            android:background="#EDEDED"
            android:layout_marginBottom="16dp"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>


