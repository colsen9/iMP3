<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EAF3FF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/custom_list_list_header"
        android:translationX="0dp"
        android:translationY="0dp"
        android:layout_height="50dp"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/custom_list_list_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            >
        </Button>

        <TextView
            android:id="@+id/custom_list_list_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:translationX="75dp"
            android:text="Custom Lists">

        </TextView>
    </LinearLayout>
    <Button
        android:id="@+id/createListButton"
        android:text="+ Create new list"
        android:textColor="#AA66CC"
        android:background="@android:color/transparent"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/listContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>
