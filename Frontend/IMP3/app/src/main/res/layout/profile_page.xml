<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000D0C0C"
    android:orientation="vertical"
    tools:context=".ProfilePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="settings"
            android:scaleType="fitCenter"
            android:src="@drawable/settings"
            android:padding="2dp"/>




        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/admin_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/admin"
            android:contentDescription="admin panel"
            android:scaleType="fitCenter"
            android:padding="2dp"/>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:contentDescription="profile picture"
        app:srcCompat="@drawable/imp3" />

    <TextView
        android:id="@+id/user_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:visibility="gone"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/user_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="bio" />

    <TextView
        android:id="@+id/spotify_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checking Spotify status..."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/spotify_link_btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Link Spotify Account"
        android:backgroundTint="@color/spotify_green"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/spotify_unlink_btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Unlink Spotify Account"
        android:backgroundTint="@color/spotify_green"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

            <Button
                android:id="@+id/spotify_generate_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Generate Tags From Spotify"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:padding="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:backgroundTint="@color/spotify_green"
                tools:ignore="MissingConstraints" />

    <!-- USER TAG SECTION -->
    <TextView
        android:id="@+id/user_tags_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Tags"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp" />

    <!-- Container for user tags -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:fillViewport="true">
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/userTagContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:flexWrap="wrap"
        app:flexDirection="row"
        app:justifyContent="flex_start"
        app:alignItems="center" />
    </androidx.core.widget.NestedScrollView>

    <!-- “+ Add Tag” button styled like a tag -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:id="@+id/addUserTagButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add Tag"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/tag_gradient_chip"
            tools:ignore="MissingConstraints"/>

            </LinearLayout>


    <Button
        android:id="@+id/music_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="Music Catalogue"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        android:textColorLink="#040404" />

    <Button
        android:id="@+id/friends_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-13dp"
        android:text="Friends"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        android:textColorLink="#040404" />

    <Button
        android:id="@+id/lists_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-13dp"
        android:text="Playlists"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        android:textColorLink="#040404" />

    <Button
        android:id="@+id/login_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-13dp"
        android:text="Login"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        android:textColorLink="#040404" />

    <Button
        android:id="@+id/signup_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-13dp"
        android:text="Signup"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        android:textColorLink="#040404" />

    <Button
        android:id="@+id/temp_main_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-13dp"
        android:text="debug page"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        android:textColorLink="#040404" />
        </LinearLayout>
    </ScrollView>
    <!-- Later to be expanded with more buttons as we add more features -->


</androidx.appcompat.widget.LinearLayoutCompat>

